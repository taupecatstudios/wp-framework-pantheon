{
  "name": "##PROJECT##/##HOSTNAME##",
  "description": "##DESCRIPTION##",
  "type": "project",
  "repositories": [
    {
      "type": "composer",
      "url": "https://composer.deliciousbrains.com/"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.1",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?p=pro&a=download"
        },
        "require": {
          "johnpbloch/wordpress": "*",
          "philippbaschke/acf-pro-installer": "^1.0",
          "composer/installers": "^1.0"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "taupecatstudios/mu-plugins",
        "version": "1.4",
        "dist": {
          "type": "zip",
          "url": "http://composer.taupecatstudios.dev/mu-plugins.zip"
        }
      }
    },
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://packagist.org"
    },
    {
      "type": "path",
      "url": "./tests/phpcs",
      "package": {
        "name": "##PROJECT##/phpcodesniffer-##PROJECT##-standards",
        "type": "phpcodesniffer-standard",
        "require": {
          "squizlabs/php_codesniffer": "*",
          "dealerdirect/phpcodesniffer-composer-installer": "*",
          "wp-coding-standards/wpcs": "*"
        }
      }
    }
  ],
  "require": {
    "dealerdirect/phpcodesniffer-composer-installer": "*",
    "wp-coding-standards/wpcs": "*",
    "##PROJECT##/phpcodesniffer-##PROJECT##-standards": "*",

    "johnpbloch/wordpress": "*",
    "taupecatstudios/mu-plugins": "*",

    "advanced-custom-fields/advanced-custom-fields-pro": "*",

    "deliciousbrains-plugin/wp-migrate-db-pro": "*",
    "deliciousbrains-plugin/wp-migrate-db-pro-cli": "*",
    "deliciousbrains-plugin/wp-migrate-db-pro-media-files": "*",

    "wpackagist-plugin/akismet": "*",
    "wpackagist-plugin/classic-editor": "*",
    "wpackagist-plugin/debug-bar": "*",
    "wpackagist-plugin/google-analytics-for-wordpress": "*",
    "wpackagist-plugin/iq-block-country": "1.2.*",
    "wpackagist-plugin/limit-login-attempts": "*",
    "wpackagist-plugin/pantheon-advanced-page-cache": "*",
    "wpackagist-plugin/pantheon-hud": "*",
    "wpackagist-plugin/show-current-template": "*",
    "wpackagist-plugin/sucuri-scanner": "*",
    "wpackagist-plugin/theme-check": "*",
    "wpackagist-plugin/worker": "*",
    "wpackagist-plugin/wp-native-php-sessions": "*",

    "wpackagist-theme/twentysixteen": "*",
    "wpackagist-theme/twentyseventeen": "*",
    "wpackagist-theme/twentynineteen": "*"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Tracy Rotton",
      "email": "trotton@taupecatstudios.com"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "secure-http": false
  },
  "extra": {
    "wordpress-install-dir": "vendor/wordpress",
    "installer-paths": {
      "web/wp-content/plugins/{$name}": ["type:wordpress-plugin"],
      "web/wp-content/themes/{$name}": ["type:wordpress-theme"]
    }
  },
  "scripts": {
    "wp-core": "rsync -rc --del --include-from .rsync-include --exclude-from .rsync-exclude vendor/wordpress/ web/",
    "wp-muplugin": "rsync -rc vendor/taupecatstudios/mu-plugins/ web/wp-content/mu-plugins/",
    "post-update-cmd": [
      "@wp-core",
      "@wp-muplugin"
    ],
    "post-install-cmd": [
      "@wp-core",
      "@wp-muplugin"
    ]
  }
}
